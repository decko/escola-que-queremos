.row *{class: [title.downcase]}
  .span12
    h2
      = title
    .row.indicators
      - indicators.each do |indicator|
        .span3 *{class: [indicator[:name].parameterize]}
          .indicator
            .row-fluid
              .status
              .pie
            .row-fluid
              .status.icon-2x
                .icon-ok
              .info
                .title
                  = indicator[:name]
                .description
                  = indicator[:description]
